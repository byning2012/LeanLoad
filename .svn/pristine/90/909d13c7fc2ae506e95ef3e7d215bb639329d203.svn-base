<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_phone_certification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hzxm.easyloan.ui.activity.PhoneCertificationActivity">

    <com.lmz.baselibrary.widget.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titlelayout_showback="true"
        app:titlelayout_style="true"
        app:titlelayout_title="@string/phone_certification" />

    <include layout="@layout/divide_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dim40"
        android:background="@color/divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim90"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim30"
            android:gravity="center"
            android:text="@string/tel_num"
            android:textColor="@color/tc_black"
            android:textSize="@dimen/txt30" />

        <com.lmz.baselibrary.widget.ClearEditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim50"
            android:layout_marginRight="@dimen/dim20"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:inputType="number"
            android:maxLength="11"
            android:hint="@string/input_tel_num"
            android:lines="1"
            android:textColorHint="@color/shallow_gray"
            android:textSize="@dimen/txt30" />
    </LinearLayout>

    <include layout="@layout/divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim90"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim30"
            android:gravity="center"
            android:text="@string/service_num"
            android:textColor="@color/tc_black"
            android:textSize="@dimen/txt30" />

        <com.lmz.baselibrary.widget.ClearEditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim50"
            android:layout_marginRight="@dimen/dim20"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:hint="@string/input_service_code"
            android:lines="1"
            android:textColorHint="@color/shallow_gray"
            android:textSize="@dimen/txt30" />
    </LinearLayout>

    <include layout="@layout/divide_line" />

    <Button
        android:id="@+id/btn_verification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim90"
        android:layout_marginLeft="@dimen/dim30"
        android:layout_marginRight="@dimen/dim30"
        android:layout_marginTop="@dimen/dim200"
        android:background="@drawable/select_sure_register_btn"
        android:text="@string/verification"
        android:textColor="@color/select_white_orange"
        android:textSize="@dimen/txt34" />
</LinearLayout>
