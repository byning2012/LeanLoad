<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.hzxm.easyloan.ui.activity.HelpCenterActivity">

    <com.lmz.baselibrary.widget.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titlelayout_showback="true"
        app:titlelayout_title="@string/help_center" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dim4"
        app:cardElevation="@dimen/dim8"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_problem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim90"
                android:layout_marginLeft="@dimen/dim34"
                android:gravity="center_vertical"
                android:text="Q：如果在凡易贷借钱？"
                android:textColor="@color/tc_black"
                android:textSize="@dimen/txt30" />

            <include layout="@layout/divide_line" />
            <TextView
                android:id="@+id/tv_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim40"
                android:layout_marginRight="@dimen/dim40"
                android:layout_marginTop="@dimen/dim30"
                android:gravity="center_vertical"
                android:text="您好，我是简单借款智能客服，您可以用一句话描述您的问题。例如：【极速认证为什么提示失败】、【如何获取邀请码】、【借款名额已满怎么办】、【如何还款】；温馨提示：人工客服服务时间早9至晚22点"
                android:textColor="@color/deep_text_white"
                android:textSize="@dimen/txt26" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
