<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim20"
        android:layout_marginRight="@dimen/dim20"
        android:layout_marginTop="@dimen/dim20"
        app:cardCornerRadius="@dimen/dim8"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/home_btn_orange"
        app:cardElevation="@dimen/dim8"
        app:cardUseCompatPadding="true">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/dim220"
          android:orientation="horizontal">
          <ImageView
              android:id="@+id/iv_bank_logo"
              android:layout_width="@dimen/dim80"
              android:layout_height="@dimen/dim80"
              android:src="@drawable/icbc"
              android:layout_marginTop="@dimen/dim40"
              android:layout_marginLeft="@dimen/dim60"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginTop="@dimen/dim40"
              android:layout_marginBottom="@dimen/dim40"
              android:layout_marginLeft="@dimen/dim40">
        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icbc"
            android:textColor="@color/white" />
              <TextView
                  android:id="@+id/tv_bank_type"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/debit_card"
                  android:layout_marginTop="@dimen/dim10"
                  android:textSize="@dimen/txt20"
                  android:textColor="@color/app_bg" />
              <TextView
                  android:id="@+id/tv_bank_num"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="6222222222222222"
                  android:layout_marginTop="@dimen/dim10"
                  android:textSize="@dimen/txt50"
                  android:textColor="@color/white" />
          </LinearLayout>
      </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>