<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dim120">

        <ImageView
            android:id="@+id/iv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bank_card1" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_card"
            android:src="@drawable/bank_card2" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/no_card"
        android:textColor="@color/deep_text_white"
        android:textSize="@dimen/txt30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim20"
        android:text="@string/card_supposed"
        android:textColor="@color/deep_text_white"
        android:textSize="@dimen/txt20" />

    <Button
        android:id="@+id/btn_add_bank"
        android:layout_width="@dimen/dim300"
        android:layout_height="@dimen/dim90"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim160"
        android:background="@drawable/select_add_bank_btn"
        android:text="@string/add_bank_card"
        android:textColor="@color/select_orange_white"
        android:textSize="@dimen/txt34" />
</LinearLayout>