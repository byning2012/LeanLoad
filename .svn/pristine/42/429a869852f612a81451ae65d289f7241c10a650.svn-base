<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_emergency_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hzxm.easyloan.ui.activity.EmergencyContactActivity">

    <com.lmz.baselibrary.widget.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titlelayout_showback="true"
        app:titlelayout_style="true"
        app:titlelayout_title="@string/emergency_contact" />

    <include layout="@layout/divide_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dim30"
        android:background="@color/divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim90"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim30"
            android:gravity="center"
            android:text="@string/relationship"
            android:textColor="@color/tc_black"
            android:textSize="@dimen/txt30" />

        <com.lmz.baselibrary.widget.ClearEditText
            android:id="@+id/et_relationship"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim80"
            android:layout_marginRight="@dimen/dim20"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:hint="@string/input_card_holder"
            android:lines="1"
            android:textColor="@color/light_gray"
            android:textColorHint="@color/shallow_gray"
            android:textSize="@dimen/txt30" />
    </LinearLayout>

    <include layout="@layout/divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim90"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim30"
            android:gravity="center"
            android:text="@string/name"
            android:textColor="@color/tc_black"
            android:textSize="@dimen/txt30" />

        <com.lmz.baselibrary.widget.ClearEditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim80"
            android:layout_marginRight="@dimen/dim20"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/emergency_name_remind"
            android:lines="1"
            android:background="@null"
            android:textColor="@color/light_gray"
            android:textColorHint="@color/shallow_gray"
            android:textSize="@dimen/txt30" />
    </LinearLayout>

    <include layout="@layout/divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim90"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim30"
            android:gravity="center"
            android:text="@string/tel_num"
            android:textColor="@color/tc_black"
            android:textSize="@dimen/txt30" />

        <com.lmz.baselibrary.widget.ClearEditText
            android:id="@+id/et_tel_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim54"
            android:layout_marginRight="@dimen/dim20"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/emergency_number_remind"
            android:lines="1"
            android:background="@null"
            android:textColor="@color/light_gray"
            android:textColorHint="@color/shallow_gray"
            android:textSize="@dimen/txt30" />
    </LinearLayout>

    <include layout="@layout/divide_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dim30"
        android:background="@color/divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim90"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim30"
            android:gravity="center"
            android:text="@string/relationship"
            android:textColor="@color/tc_black"
            android:textSize="@dimen/txt30" />

        <com.lmz.baselibrary.widget.ClearEditText
            android:id="@+id/et_relationship2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim80"
            android:layout_marginRight="@dimen/dim20"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:hint="@string/input_card_holder"
            android:lines="1"
            android:textColor="@color/light_gray"
            android:textColorHint="@color/shallow_gray"
            android:textSize="@dimen/txt30" />
    </LinearLayout>

    <include layout="@layout/divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim90"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim30"
            android:gravity="center"
            android:text="@string/name"
            android:textColor="@color/tc_black"
            android:textSize="@dimen/txt30" />

        <com.lmz.baselibrary.widget.ClearEditText
            android:id="@+id/et_name2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim80"
            android:layout_marginRight="@dimen/dim20"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/emergency_name_remind"
            android:lines="1"
            android:background="@null"
            android:textColor="@color/light_gray"
            android:textColorHint="@color/shallow_gray"
            android:textSize="@dimen/txt30" />
    </LinearLayout>

    <include layout="@layout/divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim90"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim30"
            android:gravity="center"
            android:text="@string/tel_num"
            android:textColor="@color/tc_black"
            android:textSize="@dimen/txt30" />

        <com.lmz.baselibrary.widget.ClearEditText
            android:id="@+id/et_tel_num2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim54"
            android:layout_marginRight="@dimen/dim20"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/emergency_number_remind"
            android:lines="1"
            android:background="@null"
            android:textColor="@color/light_gray"
            android:textColorHint="@color/shallow_gray"
            android:textSize="@dimen/txt30" />
    </LinearLayout>

    <include layout="@layout/divide_line" />
</LinearLayout>
