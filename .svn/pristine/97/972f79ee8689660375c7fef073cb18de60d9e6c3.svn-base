<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_certification_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hzxm.easyloan.ui.activity.CertificationCenterActivity">

    <com.lmz.baselibrary.widget.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titlelayout_showback="true"
        app:titlelayout_style="true"
        app:titlelayout_title="@string/verified_center" />

    <include layout="@layout/divide_line" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_base_certification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim400"
        android:layout_marginLeft="@dimen/dim40"
        android:layout_marginRight="@dimen/dim40"
        android:layout_marginTop="@dimen/dim80"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim10"
        app:cardElevation="@dimen/dim8"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dim120"
                android:layout_height="@dimen/dim120"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim80"
                android:src="@drawable/base_certification" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim46"
                android:gravity="center"
                android:text="@string/base_certification"
                android:textColor="@color/tc_black"
                android:textSize="@dimen/txt40" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim24"
                android:gravity="center"
                android:text="@string/start_certification"
                android:textColor="@color/home_blue"
                android:textSize="@dimen/txt22"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_promotion_certification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim400"
        android:layout_marginLeft="@dimen/dim40"
        android:layout_marginRight="@dimen/dim40"
        android:layout_marginTop="@dimen/dim30"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim10"
        app:cardElevation="@dimen/dim8"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim80"
                android:src="@drawable/promotion_certification" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim46"
                android:gravity="center"
                android:text="@string/promotion_certification"
                android:textColor="@color/tc_black"
                android:textSize="@dimen/txt40" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim20"
                android:gravity="center"
                android:text="@string/start_certification"
                android:textColor="@color/home_blue"
                android:textSize="@dimen/txt22"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
