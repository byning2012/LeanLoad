<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hzxm.easyloan.MainActivity">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/divide_line" />

    <com.lmz.baselibrary.widget.TabStripView
        android:id="@+id/navigateTabBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim100"
        android:background="@color/app_bg"
        app:containerId="@+id/main_container"
        app:navigateTabSelectedTextColor="@android:color/holo_red_dark"
        app:navigateTabTextColor="@color/tc_black"
        app:navigateTabTextSize="@dimen/txt20" />
</LinearLayout>
