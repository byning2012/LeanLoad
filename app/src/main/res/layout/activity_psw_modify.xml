<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_psw_modify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hzxm.easyloan.ui.activity.PswModifyActivity">

    <com.lmz.baselibrary.widget.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titlelayout_showback="true"
        app:titlelayout_style="true"
        app:titlelayout_title="@string/modify_password" />

    <include layout="@layout/divide_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dim40"
        android:background="@color/divide_line" />

    <com.lmz.baselibrary.widget.ClearEditText
        android:id="@+id/et_old_psw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim90"
        android:background="@color/white"
        android:ellipsize="end"
        android:paddingRight="@dimen/dim30"
        android:hint="@string/input_old_psw"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLength="16"
        android:paddingLeft="@dimen/dim40"
        android:textColor="@color/tc_black"
        android:textColorHint="@color/deep_text_white"
        android:textSize="@dimen/txt30" />

    <include layout="@layout/divide_line" />

    <com.lmz.baselibrary.widget.ClearEditText
        android:id="@+id/et_new_psw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim90"
        android:background="@color/white"
        android:ellipsize="end"
        android:hint="@string/input_new_psw"
        android:inputType="textPassword"
        android:paddingRight="@dimen/dim30"
        android:lines="1"
        android:maxLength="16"
        android:paddingLeft="@dimen/dim40"
        android:textColor="@color/tc_black"
        android:textColorHint="@color/deep_text_white"
        android:textSize="@dimen/txt30" />

    <include layout="@layout/divide_line" />

    <com.lmz.baselibrary.widget.ClearEditText
        android:id="@+id/et_sure_psw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim90"
        android:background="@color/white"
        android:ellipsize="end"
        android:hint="@string/input_new_psw_again"
        android:paddingRight="@dimen/dim30"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLength="16"
        android:paddingLeft="@dimen/dim40"
        android:textColor="@color/tc_black"
        android:textColorHint="@color/deep_text_white"
        android:textSize="@dimen/txt30" />

    <include layout="@layout/divide_line" />

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim80"
        android:layout_marginLeft="@dimen/dim30"
        android:layout_marginRight="@dimen/dim30"
        android:layout_marginTop="@dimen/dim100"
        android:background="@drawable/select_sure_register_btn"
        android:text="@string/sure"
        android:textColor="@color/select_white_orange"
        android:textSize="@dimen/txt34" />

    <TextView
        android:id="@+id/tv_forget_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim30"
        android:text="@string/forget_psw_orange"
        android:textColor="@color/home_btn_orange"
        android:textSize="@dimen/txt24" />

</LinearLayout>
